<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/image_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/title_custorm_taday_ref_item_ll1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/title_custorm_taday_ref_item_iv1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:padding="3dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/title_custorm_taday_ref_item_tvname1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            android:lines="1" />

        <TextView
            android:id="@+id/title_custorm_taday_ref_item_tvprice1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="#000000"
            android:gravity="center_horizontal" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/title_custorm_taday_ref_item_ll2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/title_custorm_taday_ref_item_iv2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:padding="3dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/title_custorm_taday_ref_item_tvname2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            android:lines="1" />

        <TextView
            android:id="@+id/title_custorm_taday_ref_item_tvprice2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="#000000"
            android:gravity="center_horizontal" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/title_custorm_taday_ref_item_ll3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/title_custorm_taday_ref_item_iv3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"

            android:padding="3dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/title_custorm_taday_ref_item_tvname3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            android:lines="1" />

        <TextView
            android:id="@+id/title_custorm_taday_ref_item_tvprice3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="#000000"
            android:gravity="center_horizontal" />

    </LinearLayout>

</LinearLayout>