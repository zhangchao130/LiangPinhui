<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/idle_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="闲置"
        android:textSize="18sp" />
    <LinearLayout
        android:id="@+id/idle_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/idle_tv_first"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:lines="1"
            android:text="类别" />
        <TextView
            android:id="@+id/idle_tv_second"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:lines="1"
            android:text="品牌" />
        <TextView
            android:id="@+id/idle_tv_third"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:lines="1"
            android:text="成色" />
        <TextView
            android:id="@+id/idle_tv_four"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:lines="1"
            android:text="更多" />
    </LinearLayout>
    <com.handmark.pulltorefresh.library.PullToRefreshHeadGridView
        android:id="@+id/idle_pulltorefresh_gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp" />
</LinearLayout>