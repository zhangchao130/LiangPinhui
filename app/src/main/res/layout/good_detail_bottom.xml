<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/gd_bottom_ll"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:layout_marginTop="3dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/good_detail_icon_contact"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系客服"
            android:textSize="12sp"
            android:layout_marginTop="3dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="2"
        android:paddingLeft="15dp"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/gd_bottom_now_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="现售价格"
            android:textSize="16sp"
            android:textColor="#ff0000"
            android:layout_marginBottom="2dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/gd_bottom_before_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="原价"
                android:textSize="14sp"
                android:paddingRight="6dp" />
            <TextView
                android:id="@+id/gd_bottom_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="节省百分比"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/gd_bottom_btn"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="2"
        android:background="#BB2212"
        android:text="立即下单"
        android:textColor="#ffffff"
        android:textSize="17sp"/>

</LinearLayout>