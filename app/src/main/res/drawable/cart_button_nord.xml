<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 连框颜色值 -->
    <item>
        <shape>
            <solid android:color="#ff0000" />

        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape>
            <gradient
                android:angle="90"
                android:centerColor="#ffffff"
                android:centerX="0.5"
                android:centerY="0.5"
                android:endColor="#ffffff"
                android:startColor="#ffffff"
                android:type="linear" />
        </shape>
    </item>
</layer-list>